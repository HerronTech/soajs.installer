resource "azurerm_resource_group" "web" {
  name     = "demo"
  location = "centralus"
}


resource "azurerm_availability_set" "web" {
  name                = "demo-web-availability-set"
  location            = "${azurerm_resource_group.web.location}"
  resource_group_name = "${azurerm_resource_group.web.name}"
  managed             = true
}

resource "azurerm_virtual_network" "web" {
  name                = "demonetwork"
  address_space       = ["${split(",", "10.0.0.0/16")}"]
  location            = "${azurerm_resource_group.web.location}"
  resource_group_name  = "${azurerm_resource_group.web.name}"
}

resource "azurerm_subnet" "web" {
  name                 = "web"
  resource_group_name  = "${azurerm_resource_group.web.name}"
  address_prefix       = "10.0.1.0/24"
  virtual_network_name =  "${azurerm_virtual_network.web.name}" 
}

resource "azurerm_network_security_group" "web" {
  name                = "demo-web-sg"
  location            = "${azurerm_resource_group.web.location}"
  resource_group_name = "${azurerm_resource_group.web.name}"

}

resource "azurerm_public_ip" "web" {
    name                         = "demo-web-ip"
    location                     = "${azurerm_resource_group.web.location}"
    resource_group_name          = "${azurerm_resource_group.web.name}"
    public_ip_address_allocation = "dynamic"
    idle_timeout_in_minutes      = 30
}

resource "azurerm_lb" "web" {
    name                         = "demo-web-lb"
    location                     = "${azurerm_resource_group.web.location}"
    resource_group_name          = "${azurerm_resource_group.web.name}"

    frontend_ip_configuration {
        name                 = "demo-web-lb-ip"
        public_ip_address_id          = "${azurerm_public_ip.web.id}" 
    }
}

resource "azurerm_lb_backend_address_pool" "web" {
  resource_group_name          = "${azurerm_resource_group.web.name}"
  loadbalancer_id              = "${azurerm_lb.web.id}"
  name                         = "demo-web-lb-backend-address-pool"
}


resource "azurerm_network_interface" "web" {
    count                     = 2
    name                      = "demo-web-ni-${count.index}"
    location                  = "${azurerm_resource_group.web.location}"
    resource_group_name       = "${azurerm_resource_group.web.name}"
    network_security_group_id =  "${azurerm_network_security_group.web.id}" 

    ip_configuration {
        name                                    = "demo-web-ni-ipConfig-${count.index}"
        subnet_id                               = "${azurerm_subnet.web.id}"
        private_ip_address_allocation           = "dynamic"
        load_balancer_backend_address_pools_ids = ["${azurerm_lb_backend_address_pool.web.id}"]
    }
}

resource "azurerm_virtual_machine" "web-0" {
    name                  = "demo-web-vm-0"
    location              = "${azurerm_resource_group.web.location}"
    resource_group_name   = "${azurerm_resource_group.web.name}"
    network_interface_ids = ["${element(azurerm_network_interface.web.*.id, 0)}"]
    vm_size               = "Standard_A0"

    availability_set_id   = "${azurerm_availability_set.web.id}"

    delete_os_disk_on_termination = true
    delete_data_disks_on_termination = true

    storage_image_reference {
        publisher = "Canonical"
        offer     = "UbuntuServer"
        sku       = "16.04-LTS"
        version   = "latest"
    }

    storage_os_disk {
        name              = "demo-web-osDisk-0"
        caching           = "ReadWrite"
        create_option     = "FromImage"
        managed_disk_type = "standard_LRS"
    }



    os_profile {
        computer_name  = "web"
        admin_username = "ubuntu"
        admin_password = "Password1234!"
    }

    os_profile_linux_config {
        disable_password_authentication = false

    }


    tags {
        soajs.env.code = "TEST"
        soajs.layer.name = "web"
        soajs.network.name =  "demo-vn" 
        soajs.vm.name = "demo-web-vm-0"
    }
}

